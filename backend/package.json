{
  "name": "hvi-continuity-backend",
  "version": "1.0.0",
  "description": "HVI Continuity Platform Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --testPathPattern=\"verification.test.js|server.test.js\" --testTimeout=10000",
    "test:all": "jest --verbose --testTimeout=15000 --forceExit --detectOpenHandles",
    "test:watch": "jest --watch --testTimeout=10000"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.22"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js"
    ],
    "coverageDirectory": "coverage"
  }
}

